class Solution(object):
    def maxDistance(self, a, x):
        """
        :type position: List[int]
        :type m: int
        :rtype: int
        """
        a.sort()
        l,r = 0, max(a)
        while r>l+1:
            m=(l+r)//2
        
            pre=a[0]
            count =1
            for each in a:
                if each-pre>=m:
                    pre=each
                    count+=1
        
            if count>=x:
                l=m 
            else:
                r=m
        return l      
